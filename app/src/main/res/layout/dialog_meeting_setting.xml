<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/CapD_transparent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:src="@mipmap/ic_launcher_foreground" />

    <RelativeLayout
        android:id="@+id/dialog_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="70dp"
        android:background="@drawable/card_blue_shape"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textviewLogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:text="모임 일정 설정"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/revise_meeting_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textviewLogo2"
            android:layout_alignParentRight="false"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:text="일정 정보 수정"
            android:textColor="@color/CapD_color_main"
            android:textSize="20sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/revise_meeting_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/revise_meeting_info"
            android:layout_alignParentRight="false"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:text="일정 시간 수정"
            android:textColor="@color/CapD_color_main"
            android:textSize="20sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/delete_meeting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/revise_meeting_time"
            android:layout_alignParentRight="false"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_shape"
            android:text="일정 지우기"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>